<%= form_with model: @categorie, local: true do |f| %>
  <div class=grid-container>
    <div class=grid-item>
      <%= link_to image_tag(asset_path('back-arrow-icon.svg'), class: 'back-arrow'), authenticated_root_path %>
    </div>
    <div class=grid-item>
      <div class=text>
        CATAGORIE
      </div>
    </div>
    <div class=grid-item>
      <%= f.submit "SAVE", data: {turbo: false} %>
    </div>
  </div>
  <%= f.text_field :name, placeholder: 'Name', class: 'input-field' %>
  <%= f.text_field :icon, placeholder: 'Image URL', class: 'input-field' %>
<% end %>
<div class=note>
  Hi <%= @author.name %>, you are creating a categorie.
  once you input 'Name' and 'Image url', click enter or save button.
</div>
