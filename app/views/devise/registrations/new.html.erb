<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class=login-page>
    <div class=flex-row-sb>
      <%= link_to 'BACK', authenticated_root_path%>
      <div class=text>
        REGISTER
      </div>
      <%= f.submit "NEXT", data: {turbo: false} %>
    </div>

  <div class="email-input">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name', class: 'input-field'  %>
  </div>

  <div class="email-input">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'input-field'  %>
  </div>

  <div class="email-input">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (min 6 chars)', class: 'input-field'  %>
  </div>
  <% end %>
